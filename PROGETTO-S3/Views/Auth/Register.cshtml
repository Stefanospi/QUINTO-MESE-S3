@model PROGETTO_S3.Models.User

@{
    ViewData["Title"] = "Register";
}

<h1 class="font-personal">Register</h1>

<h4 class="font-personal">User</h4>
<hr class="bg-personal" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register" class="border-personal p-personal">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label font-personal"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label font-personal"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label font-personal"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-personal" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="" asp-controller="Auth" asp-action="Login" class="link-personal">Go to Login</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
