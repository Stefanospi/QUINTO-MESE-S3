@model List<PROGETTO_S3.Models.Order>

@{
    ViewData["Title"] = "All Orders";
}

<h1>All Orders</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Address</th>
            <th>Total Amount</th>
            <th>Processed</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.IdOrder</td>
                <td>@order.Address</td>
                <td>@order.TotalAmount</td>
                <td>@order.IsProcessed</td>
                <td>
                    @if (!order.IsProcessed)
                    {
                        <form asp-action="IsProcessed" method="post">
                            <input type="hidden" name="id" value="@order.IdOrder" />
                            <button type="submit" class="btn btn-primary">Mark as Processed</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
